{
  "name": "noor",
  "description": "Islamic wellness app combining CBT-based mental health tools with Quran, prayer times, Arabic learning, hadith, and daily adhkar",
  "main": "client/index.js",
  "version": "1.0.0",
  "scripts": {
    "expo:dev": "EXPO_PACKAGER_PROXY_URL=https://$REPLIT_DEV_DOMAIN REACT_NATIVE_PACKAGER_HOSTNAME=$REPLIT_DEV_DOMAIN EXPO_PUBLIC_DOMAIN=$REPLIT_DEV_DOMAIN:5000 npx expo start --localhost",
    "server:dev": "tsx server/index.ts",
    "expo:start:static:build": "npx expo start --no-dev --minify --localhost",
    "expo:static:build": "node scripts/build.js",
    "server:build": "esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outdir=server_dist",
    "server:prod": "NODE_ENV=production node server_dist/index.js",
    "db:push": "drizzle-kit push",
    "db:verify": "tsx scripts/verify-schema.ts",
    "db:seed": "tsx scripts/seed-test-data.ts",
    "db:seed:full": "SEED_MODE=full tsx scripts/seed-test-data.ts",
    "db:seed:quran": "tsx server/scripts/seed-quran-metadata.ts",
    "db:seed:vocabulary": "tsx server/scripts/seed-vocabulary.ts",
    "db:seed:hadiths": "tsx server/scripts/seed-hadiths.ts",
    "db:seed:adhkar": "tsx server/scripts/seed-adhkar.ts",
    "lint": "npx expo lint",
    "lint:fix": "npx expo lint --fix",
    "check:types": "tsc --noEmit",
    "typecheck": "npm run check:types",
    "check:format": "prettier --check \"**/*.{js,ts,tsx,css,json}\"",
    "format": "prettier --write \"**/*.{js,ts,tsx,css,json}\"",
    "test": "npm run test:server",
    "test:server": "jest --config jest.config.js",
    "test:client": "jest --config jest.config.mobile.js",
    "test:watch": "jest --watch",
    "test:e2e:ios": "detox test --configuration ios.sim.debug",
    "test:e2e:android": "detox test --configuration android.emu.debug",
    "test:e2e:ios:release": "detox test --configuration ios.sim.release",
    "test:e2e:android:release": "detox test --configuration android.emu.release",
    "build:e2e:ios": "detox build --configuration ios.sim.debug",
    "build:e2e:android": "detox build --configuration android.emu.debug",
    "build:e2e:ios:release": "detox build --configuration ios.sim.release",
    "build:e2e:android:release": "detox build --configuration android.emu.release",
    "verify": "npm run check:types && npm test",
    "verify:local": "npm run check:types && npm test",
    "ship": "node tools/ship.mjs",
    "release:check": "npm run check:types && npm run lint && npm test",
    "eas:build:dev": "eas build --profile development",
    "eas:build:preview": "eas build --profile preview",
    "eas:build:prod": "eas build --profile production",
    "eas:submit:prod": "eas submit --profile production",
    "eas:submit:ios": "eas submit --profile production --platform ios",
    "eas:submit:android": "eas submit --profile production --platform android",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "deploy:backend": "bash scripts/deploy-backend.sh",
    "sentry:release": "bash scripts/sentry-release.sh",
    "version:bump": "bash scripts/bump-version.sh"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@expo-google-fonts/amiri": "^0.4.1",
    "@expo-google-fonts/cormorant-garamond": "^0.4.1",
    "@expo-google-fonts/inter": "^0.4.2",
    "@expo/vector-icons": "^15.0.2",
