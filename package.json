    "@xenova/transformers": "^2.17.2",
    "adhan": "^4.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "drizzle-orm": "^0.39.3",
    "drizzle-zod": "^0.7.1",
    "expo": "~54.0.32",
    "expo-av": "^16.0.8",
    "expo-blur": "^15.0.7",
    "expo-constants": "~18.0.9",
    "expo-dev-client": "~6.0.20",
