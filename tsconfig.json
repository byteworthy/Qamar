{
  "extends": "expo/tsconfig.base.json",
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./client/*"],
      "@shared/*": ["./shared/*"]
    },
    "types": ["node"]
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "archive",
    "scripts",
    "web",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/__tests__/**",
    "jest.config.*.js"
  ]
}
