{
  "expo": {
    "name": "Noor (Beta)",
    "slug": "noor",
    "version": "0.9.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "noor",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.noor.app"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#D4C4A8",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "package": "com.noor.app",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#FAF8F3",
          "dark": {
            "backgroundColor": "#1A1A1A"
          }
        }
      ],
      "expo-web-browser",
      "react-native-iap",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon.png",
          "color": "#4fd1a8",
          "defaultChannel": "default",
          "sounds": []
        }
      ]
    ],
    "experiments": {
      "reactCompiler": true
    },
    "privacy": "public",
    "primaryColor": "#D4C4A8",
    "description": "Islamic reflection journaling for spiritual clarity. Not therapy, not a substitute for professional care.",
    "extra": {
      "privacyPolicyUrl": "https://byteworthy.github.io/Noor/legal/privacy.html",
      "termsOfServiceUrl": "https://byteworthy.github.io/Noor/legal/terms.html",
      "supportEmail": "scale@getbyteworthy.com"
    }
  }
}
