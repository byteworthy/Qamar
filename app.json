{
  "expo": {
    "name": "Noor",
    "slug": "noor",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "noor",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.noor.app",
      "infoPlist": {
        "NSFaceIDUsageDescription": "Noor uses Face ID to securely protect your personal reflections and growth journal entries."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#D4C4A8",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "package": "com.noor.app",
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "USE_BIOMETRIC",
        "USE_FINGERPRINT"
      ]
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#FAF8F3",
          "dark": {
            "backgroundColor": "#1A1A1A"
          }
        }
      ],
      "expo-web-browser",
      "react-native-iap",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/icon.png",
          "color": "#4fd1a8",
          "defaultChannel": "default",
          "sounds": []
        }
      ],
      "@sentry/react-native",
      "expo-secure-store",
      "expo-local-authentication"
    ],
    "experiments": {
      "reactCompiler": true
    },
    "primaryColor": "#D4C4A8",
    "description": "Personal growth and reflection journaling with Islamic spiritual guidance. Not professional counseling, not for urgent situations.",
    "extra": {
      "privacyPolicyUrl": "https://byteworthy.github.io/noor-legal/privacy-policy",
      "termsOfServiceUrl": "https://byteworthy.github.io/noor-legal/terms-of-service",
      "supportEmail": "scale@getbyteworthy.com",
      "eas": {
        "projectId": "b3e205eb-b119-4976-a275-df7bcef85275"
      }
    }
  }
}
